pipeline {
    agent any
    tools {
          maven 'MAVEN_HOME'
        }
        stages {
        stage("Compile") {
                steps {
                    sh "mvn compile"
                }
            }
        stage("UI tests") {
            steps {
                    sh "mvn test"
                }
            post {
                      always {
                        script {
                          allure([
                            includeProperties: false,
                            jdk: '',
                            properties: [],
                            reportBuildPolicy: 'ALWAYS',
                            results: [[path: 'target/allure-results']]
                          ])
                }
               }
              }
        }
    }
}